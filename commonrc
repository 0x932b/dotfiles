# Path
export PATH="$HOME/bin:$HOME/.local/bin:/usr/local/bin:/usr/local/sbin:$PATH"

# nvim
if command -v nvim >/dev/null 2>&1; then
    alias vim="nvim"
    alias vi="nvim"
    export EDITOR="nvim"
else
    export EDITOR="vim"
fi

#screen
alias sls="screen -ls"
alias sr="screen -x"
# alias ss='screen -t $1 -S $1'

#mosh
export LC_ALL='en_US.UTF-8'
export LANG='en_US.UTF-8'
export MM_CHARSET='UTF-8'

